@model IEnumerable<Domain.HorarioRubro>

@{
    ViewBag.Title = "Rubros de Horario";
}
<h2>@ViewBag.Title</h2>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<hr />
<div>
    <div class="form-inline">
        @Html.Label("Buscar", htmlAttributes: new { @class = "control-label" })
        @Html.Editor(" ", new { htmlAttributes = new { @class = "form-control buscar0", @placeholder = "Buscar.." } })
        <a href="@Url.Action("Create")" class="btn btn-lg btn-floating raised-button blue-gradient waves-effect" data-toggle="tooltip" data-placement="right" title="Crear nuevo"><span class="icon-plus"></span></a>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="display hover table table0" data-page-length="25">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activo)
                </td>
                <td>
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-navicon" style="color:darkblue"></i><b class="caret" style="color:darkblue"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Edit",new { id=item.HorarioRubroId})"><span class="icon-pencil"></span>&nbsp;Editar</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Details",new { id = item.HorarioRubroId })"><span class="icon-eye"></span>&nbsp;Detalles</a>
                                </li>
                                <li>
                                    <a onclick="return alertify.confirm('Confirmar', 'Desea eliminar el registro', function(){ location.href='@Url.Action("Delete",new { id=item.HorarioRubroId})' }
                                        , function(){ alertify.error('Cancelado')});"><span class="icon-bin2"></span>&nbsp;Borrar</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}