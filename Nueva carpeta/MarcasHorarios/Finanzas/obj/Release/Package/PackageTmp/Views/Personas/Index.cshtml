                <th>
                    @Html.DisplayNameFor(model => model.MarcaSP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MarcaZAP)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
